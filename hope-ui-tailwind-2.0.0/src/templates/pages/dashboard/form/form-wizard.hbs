{{#extend layout title="form-validation" active="form-wizard" path="../../" }}
{{#content "content"}}
<div class="flex flex-wrap">
    <div class="w-full">
        <div class="relative flex flex-col mb-8 text-gray-500 bg-white shadow-lg rounded-xl">
            <div class="flex justify-between flex-auto p-6 pb-0">
                <div class="header-title">
                    <h4 class="text-2xl font-medium text-black">Simple Wizard</h4>
                </div>
            </div>
            <div class="p-6" x-data="{ open: true, open1: false, open2: false, open3: false }">
                <form class="mt-4" >
                <ul class="flex flex-wrap p-0 mb-14">
                    <li class="flex-auto w-full lg:pr-4 md:pr-4 mb-2 lg:w-1/4 md:w-1/2">
                        <div x-bind:class="open1 || open2 || open3 ? 'bg-green-500 rounded-lg' : 'bg-blue-500 rounded-lg'">
                            <div class="flex items-center p-4 iq-icon">
                                <div class="p-3 mr-4 bg-white rounded-full text-blue"><svg
                                        xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                </div>
                                <span class="text-white">Account</span>
                            </div>
                        </div>
                    </li>
                    <li class="flex-auto w-full lg:px-4 md:pl-4 mb-2 lg:w-1/4 md:w-1/2">
                        <div x-bind:class="open2 || open3 ? 'bg-green-500 rounded-lg' : 'bg-blue-500 rounded-lg'">
                            <div class="flex items-center p-4 iq-icon">
                                <div class="p-3 mr-4 bg-white rounded-full text-blue"><svg
                                        xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                </div>
                                <span class="text-white">Personal</span>
                            </div>
                        </div>
                    </li>
                    <li class="flex-auto w-full lg:px-4 md:pr-4 mb-2 lg:w-1/4 md:w-1/2">
                        <div x-bind:class="open3  ? 'bg-green-500 rounded-lg' : 'bg-blue-500 rounded-lg'">
                            <div class="flex items-center p-4 iq-icon">
                                <div class="p-3 mr-4 bg-white rounded-full text-blue"><svg
                                        xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                </div>
                                <span class="text-white">Image</span>
                            </div>
                        </div>
                    </li>
                    <li class="flex-auto w-full lg:pl-4 md:pl-4 mb-2 lg:w-1/4 md:w-1/2">
                        <div x-bind:class="open3  ? 'bg-green-500 rounded-lg' : 'bg-blue-500 rounded-lg'">
                            <div class="flex items-center p-4 iq-icon">
                                <div class="p-3 mr-4 bg-white rounded-full text-blue"><svg
                                        xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                                <span class="text-white">Finish</span>
                            </div>
                        </div>
                    </li>
                </ul>
                <div x-bind:class="open ? 'flex flex-wrap justify-between' : 'hidden'">
                    <div class="flex flex-col lg:w-1/2 lg:pr-4">
                        <div class="flex flex-auto">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Account Information</h4>
                            </div>
                        </div>
                        <form>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="email">Email address:*</label>
                                <input type="email" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Email Id" id="email1">
                            </div>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="pwd">Password:*</label>
                                <input type="password" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Password" id="pwd">
                            </div>
                        </form>
                    </div>
                    <div class="flex flex-col lg:w-1/2 lg:pl-4">
                        <div class="flex flex-auto">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Step 1-4</h4>
                            </div>
                        </div>
                        <form>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="email">Username:*</label>
                                <input type="email" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Username" id="email1">
                            </div>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="pwd">Confirm Password:*</label>
                                <input type="password" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Confirm Password" id="pwd">
                            </div>
                        </form>
                    </div>
                    <div class="flex justify-end w-full">
                        <div  @click="if (open == true) open = false; open1 = true" class="inline-block p-2 px-6 py-2 text-base font-normal text-center text-white transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white">Next</div>
                    </div>
                </div>
                <div x-bind:class="open1 ? 'flex flex-wrap justify-between' : 'hidden'">
                    <div class="flex flex-col lg:w-1/2 lg:pr-4">
                        <div class="flex flex-auto">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Personal Information</h4>
                            </div>
                        </div>
                        <form>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="fname">First Name: *</label>
                                <input type="text" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="First Name" id="fname">
                            </div>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="pwd">Contact No.: *</label>
                                <input type="text" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Contact No." id="contact">
                            </div>
                        </form>
                    </div>
                    <div class="flex flex-col lg:w-1/2 lg:pl-4">
                        <div class="flex flex-auto">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Step 2-4</h4>
                            </div>
                        </div>
                        <form>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="email">Last Name: *</label>
                                <input type="email" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Contact No." >
                            </div>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600" for="pwd">Alternate Contact No.: *</label>
                                <input type="password" class="block w-full px-4 py-2 text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" placeholder="Alternate Contact No." >
                            </div>
                        </form>
                    </div>
                    <div class="flex justify-end w-full">
                        <button @click= "if (open1 == true) open1 = false; open = true" class="inline-block p-2 px-6 py-2 text-base font-normal text-center text-white transition-all duration-500 ease-in-out bg-black border rounded shadow-md hover:text-white">Previous</button>
                        <button @click= "if (open1 == true) open2 = true; open1 = false" class="inline-block p-2 px-6 py-2 text-base font-normal text-center text-white transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white">Next</button>
                    </div>
                </div>
                <div x-bind:class="open2 ? '' : 'hidden'">
                    <div class="flex flex-wrap">
                        <div class="flex flex-auto w-1/2">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Image Upload:</h4>
                            </div>
                        </div>
                        <div class="flex flex-auto w-1/2">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Step 3-4</h4>
                            </div>
                        </div>
                    </div>
                    <div class=" lg:w-full">
                        <form>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600">Upload Your Photo:</label>
                                <input id="choose" type="file" class="block w-full text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" name="pic" accept="image/*">
                            </div>
                            <div class="mb-4">
                                <label class="inline-block mb-4 text-gray-600">Upload Signature Photo:</label>
                                <input id="choose" type="file" class="block w-full text-base placeholder-gray-600 font-normal bg-white border rounded outline-none focus:border-blue-500 focus:shadow" name="pic-2" accept="image/*">
                            </div>
                        </form>
                    </div>
                    <div class="flex justify-end w-full">
                        <button @click= "if (open2 == true) open2 = false; open1 = true" class="inline-block p-2 px-6 py-2 text-base font-normal text-center text-white transition-all duration-500 ease-in-out bg-black border rounded shadow-md hover:text-white">Previous</button>
                        <button @click= "if (open2 == true) open2 = false; open3 = true" class="inline-block p-2 px-6 py-2 text-base font-normal text-center text-white transition-all duration-500 ease-in-out bg-blue-500 border border-blue-500 rounded shadow-md hover:shadow-md hover:bg-blue-600 hover:text-white">Next</button>
                    </div>
                </div>
                <div x-bind:class="open3 ? 'flex flex-wrap justify-between' : 'hidden'">
                    <div class="flex flex-col lg:w-1/2 lg:pr-4">
                        <div class="flex flex-auto">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Finish</h4>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col lg:w-1/2 lg:pl-4">
                        <div class="flex flex-auto">
                            <div class="mb-6 header-title">
                                <h4 class="text-3xl font-medium text-black">Step 4-4</h4>
                            </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="flex flex-col justify-center w-full">
                        <h2 class="text-3xl font-medium text-center text-green-500"><strong>SUCCESS !</strong></h2>
                        <br>
                    <div class="flex flex-wrap justify-center text-center">
                        <div class="flex-auto"> <img src="{{path}}assets/images/pages/img-success.png" height="300px" width="300px" class="inline-block h-auto max-w-full mx-auto " alt="fit-image"> </div>
                    </div>
                    <br>
                    <br>
                    <div class="flex flex-wrap justify-center">
                        <div class="flex-auto w-3/5 text-center">
                            <h5 class="text-center text-black">You Have Successfully Signed Up</h5>
                        </div>
                    </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>

</div>



{{/content}}
{{/extend}}
