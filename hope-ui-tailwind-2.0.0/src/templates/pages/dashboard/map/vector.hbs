{{#extend layout title="vector" active="map-vector" path="../../" }}
{{#content "head" }}
    <link rel='stylesheet' href="{{path}}assets/vendor/Leaflet/leaflet.css">
{{/content}}
{{#content "content"}}

<div class="flex flex-wrap">
    <div class="flex-auto w-full">
        <div class="relative flex flex-col mb-8 text-gray-500 bg-white shadow-lg rounded-xl">
            <div class="flex justify-between flex-auto p-6 pb-0">
                <div class="header-title">
                    <h4 class="text-2xl font-medium text-black">Basic</h4>
                </div>
            </div>
            <!-- Specify the map and it's dimensions -->
            <div class="p-6">
                <div id="map" style="height: 500px" class="w-full"></div>
            </div>


    </div>
</div>
</div>

{{/content}}
{{#content "scripts"}}
    <script src="{{path}}assets/vendor/Leaflet/leaflet.js"></script>
    <script src="{{path}}assets/js/plugins/vector.js"></script>
{{/content}}
{{/extend}}